@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button @onclick="IncrementCount" >Count Higher</button>

<button @onclick="DecrimentCount" >Count Lower</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount = currentCount +1;
    }
    private void DecrimentCount()
    {
        currentCount = currentCount -1;
    }
}
